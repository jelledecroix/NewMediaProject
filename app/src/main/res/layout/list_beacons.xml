<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
  <ImageView
            android:id="@+id/imageviewBeaonc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/beacon"
            android:src="@drawable/beacon" />

        <TextView
            android:id="@+id/textViewNaamBeacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageviewBeaonc"
            android:layout_marginLeft="10dp"
            android:text="@string/naam_beacon"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnToonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/info_beacon" >
        </Button>



</LinearLayout>